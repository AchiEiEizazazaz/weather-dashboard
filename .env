# ============================================================================
# Weather Dashboard ‚Äì Variables de Entorno
# Archivo de configuraci√≥n migrado desde local.settings.json
# ============================================================================

# ============================================================================
# üîß Configuraci√≥n general del entorno
# ============================================================================

NODE_ENV=development
ASPNETCORE_ENVIRONMENT=Development

# ============================================================================
# üåê Configuraci√≥n de URLs (entorno local)
# ============================================================================

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:7071
NGINX_URL=http://localhost:8080

# ============================================================================
# ‚òÅÔ∏è API de OpenWeatherMap
# ============================================================================

OPENWEATHER_API_KEY=[YOUR_API_KEY_HERE]  # Reemplaza con tu clave de API de OpenWeatherMap

# ============================================================================
# ‚öôÔ∏è Azure Functions ‚Äì Configuraci√≥n de entorno
# ============================================================================

AZURE_WEBJOBS_STORAGE=UseDevelopmentStorage=true
FUNCTIONS_WORKER_RUNTIME=dotnet-isolated

# ============================================================================
# üß† Redis ‚Äì Configuraci√≥n de cache
# ============================================================================

REDIS_CONNECTION_STRING=redis:6379,password=weather_redis_pass
REDIS_PASSWORD=weather_redis_pass

CACHE_DURATION_MINUTES=15
FORECAST_CACHE_DURATION_MINUTES=60

# ============================================================================
# üö® Alertas y umbrales meteorol√≥gicos
# ============================================================================

HIGH_TEMPERATURE_THRESHOLD=35.0     # ¬∞C
LOW_TEMPERATURE_THRESHOLD=0.0       # ¬∞C
HIGH_WIND_SPEED_THRESHOLD=15.0      # m/s

# ============================================================================
# ‚è±Ô∏è Configuraci√≥n de rate limiting
# ============================================================================

RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_SECONDS=10

# ============================================================================
# üîí Configuraci√≥n de CORS (entornos de desarrollo)
# ============================================================================

CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================================================
# üöÄ Frontend ‚Äì Configuraci√≥n Vite
# ============================================================================

VITE_API_BASE_URL=http://localhost:7071/api
VITE_APP_NAME=Weather Dashboard
VITE_APP_VERSION=1.0.0

# ============================================================================
# ‚ôªÔ∏è Desarrollo local ‚Äì Compatibilidad con herramientas de hot reload
# ============================================================================

CHOKIDAR_USEPOLLING=true
